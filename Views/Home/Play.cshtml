@{
    ViewData["Title"] = "Play The Game";
}

<script src="~/lib/jquery/dist/jquery.js"></script>

        <div class="row">
            <h3 class="col-md-4 text-center">User Score</h3>
            <h3 class="col-md-4 text-center">Time Remaining</h3>
            <h3 class="col-md-4 text-center">Hi Score</h3>
        </div>
            <h3 id="userScore" class="col-md-4 text-center">0</h3>
            <h3 id="stopwatch" class="col-md-4 text-center">00:15</h3>
            <h3 id="hiscore" class="col-md-4 text-center">10000</h3>
        </div>

		<h3 class="col-md-12 text-center">Using Morse Code, Enter The Following:</h3>

        <h1 id="challengeWord" class="col-md-12 text-center">WORD</h1>

	<!-- BEGIN: Output. -->
	<div class="output">

		<p class="message">

			<span class="characters">
				<!-- This will be populated by the user. -->
			</span>

			<span class="possibleCharacters">
				<!-- This will be populated dynamically. -->
			</span>

		</p>

	</div>
	<!-- END: Output. -->


	<!-- BEGIN: Alphabet. -->
	<div class="alphabet">

		<h3>
			Morse Code Alphabet
		</h3>

		<ul class="characters">
			<!-- This will be populated dynamically. -->
		</ul>

		<!-- Define the template. -->
		<script type="application/x-template" class="template">

			<li>
				<span class="character"></span>
				<span class="sequence"></span>
			</li>

		</script>

	</div>

<script src="~/js/app/morsecode.js" asp-append-version="true"></script>
<script src="~/js/app/initialize.js" asp-append-version="true"></script>